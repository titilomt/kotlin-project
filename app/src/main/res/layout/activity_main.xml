<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".ui.activities.MainActivity">
    <ImageView
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/imgLogo"
            android:src="@mipmap/ic_launcher"
            android:layout_width="150dp"
            android:layout_height="150dp"
    />

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLogo"
            android:layout_margin="10dp"
    >

        <RelativeLayout
                android:layout_marginTop="50dp"
                android:id="@+id/loginContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/labelLogin"
                    android:layout_width="match_parent"
                    android:textSize="25sp"
                    android:fontFamily="@font/robotomedium"
                    android:layout_height="wrap_content"
                    android:text="@string/labelLogin"
            />
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputLogin"
                    android:layout_below="@+id/labelLogin"
                    android:inputType="textEmailAddress"
            />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/senhaContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginContainer"
        >
            <TextView
                    android:id="@+id/labelSenha"
                    android:textSize="25sp"
                    android:fontFamily="@font/robotomedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/labelSenha"
            />
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/inputSenha"
                    android:layout_below="@+id/labelSenha"
                    android:inputType="textPassword"
            />
        </RelativeLayout>

        <Button
                android:id="@+id/buttonSubmit"
                android:layout_below="@+id/senhaContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBtnName"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:fontFamily="@font/robotomedium"
                android:background="@drawable/gradient_button"
                android:text="@string/submitBtn"
        />
        <Button
                android:layout_marginTop="10dp"
                android:id="@+id/buttonRegister"
                android:layout_below="@+id/buttonSubmit"
                android:textColor="@color/colorBtnName"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:fontFamily="@font/robotomedium"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_button"
                android:text="@string/registerBtn"
        />
    </RelativeLayout>

</RelativeLayout>