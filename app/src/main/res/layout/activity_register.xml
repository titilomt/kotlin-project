<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".ui.activities.RegisterActivity">

    <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
    >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/doge_logo"
        />

        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="@font/robotomedium"
                    android:textSize="25sp"
                    android:id="@+id/labelName"
                    android:text="@string/crudName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
            <EditText
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/crudName"
                    android:layout_below="@+id/labelName"
            />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="@font/robotomedium"
                    android:textSize="25sp"
                    android:id="@+id/labelEmail"
                    android:text="@string/crudEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:id="@+id/crudEmail"
                    android:layout_below="@+id/labelEmail"
            />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="25sp"
                    android:fontFamily="@font/robotomedium"
                    android:id="@+id/labelPassword"
                    android:text="@string/crudPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
            <EditText
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:id="@+id/crudPassword"
                    android:layout_below="@+id/labelPassword"
            />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="25sp"
                    android:id="@+id/labelConfirmPassword"
                    android:text="@string/crudPasswordConfirm"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/robotomedium"
                    android:layout_height="wrap_content"
            />
            <EditText
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:id="@+id/crudConfirmPassword"
                    android:layout_below="@+id/labelConfirmPassword"
            />
        </RelativeLayout>

        <Button
                android:textSize="20sp"
                android:fontFamily="@font/robotomedium"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnCrud"
                android:text="@string/btnCrud"
                android:background="@drawable/gradient_button"
                android:textColor="@color/colorBtnName"
        />
    </LinearLayout>

</RelativeLayout>